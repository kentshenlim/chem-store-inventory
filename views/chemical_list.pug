extends layout

block content
    section 
        div(class='flex justify-between') 
            a(href='/' class='text-link-color') &#128896; Home
            a(href='/chemical/create' class='text-link-color') Create &#128898;

    section
        div 
            if (allChemicals && allChemicals.length)
                ul
                    each chemical in allChemicals
                        li(class='relative listItem hover-color')
                            h2(class='text-lg capitalize') #{chemical.name}
                            p!= chemical.formulaFormatted
                            p CAS no.: #{chemical.casNo}
                            p MW (g mol
                                sup -1 
                                | ): #{chemical.mW}
                            a(href='/chemical/' + chemical._id class='absolute inset-0') 
                        
            else
                p Oops, it seems like the record is empty. Please create one to add to it.