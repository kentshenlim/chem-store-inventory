extends layout

block content
    section 
        div(class='flex justify-between') 
            a(href='/' class='text-link-color') &#128896; Home
            a(href='/group/create' class='text-link-color') Create New &#128898;

    section 
        div 
            if (allGroups && allGroups.length)
                ul
                each group in allGroups
                    li(class='list-none [&:not(:first-child)]:mt-3 flex flex-col items-start border indent py-2 border-transparent border-b-slate-400 [&>:not(:first-child)]:px-2')
                        p(class='text-lg font-semibold capitalize') #{group.name}
                        p(class='line-clamp-3') #{group.description}
                        a(href='/group/' + group._id class='text-link-color') Inspect
                        if (group.wikiUrl)
                            a(href=group.wikiUrl target='_blank' class='inline-flex items-center self-end gap-1 text-right text-link-color')
                                img(src='/images/externalLink.svg', alt="External link icon" class='inline')
                                | #[em Wiki ]
            else 
                p Oops, it seems like the record is empty. Please create one to add to it.



